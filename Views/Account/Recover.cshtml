@using ActiveFinance1.Data.Model
@model UserAccountDetail
@using Microsoft.AspNetCore.Http;
@inject IHttpContextAccessor HttpContextAccessor

@{
    if (HttpContextAccessor.HttpContext.Session.GetString("SecurityCode") != null && HttpContextAccessor.HttpContext.Session.GetString("SecurityCode").ToString() != "")
    {

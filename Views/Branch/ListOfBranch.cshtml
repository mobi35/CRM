@model IEnumerable<Branch>

@{
    Layout = "_Staff";
    ViewData["Title"] = "Branch List";
}

<a asp-action="Create" asp-controller="Branch" style="color:white; font-weight:bold;" class="btn btn-success"><span class="fa fa-plus-circle"></span> Create New Branch</a>
<table class="table table-striped table-bordered responsive no-wrap" style="width:100%;margin-top:5%;" id="userList">
    <thead>
        <tr>
            <th>Branch Name</th>
            <th>Branch Address</th>
            <th>Action</th>
        </tr>
    </thead>

    <tbody>
        @{
            foreach (var branch in Model)
            {
                <tr>
                    <td>@branch.BranchName</td>
                    <td>@branch.BranchAddress</td>

                    <td><a asp-route-id="@branch.RecordId" asp-action="Update" asp-controller="Branch"><span style="font-size:30px;color:#007bff" class="fa fa-edit"></span></a> <a asp-action="Delete" asp-controller="Branch" asp-route-id="@branch.RecordId" style="color:#d33333; font-size:30px" onclick="return confirm('Are you sure you want to delete this account?')"> <span class="fa fa-trash"></span></a></td>
                </tr>
            }
        }
    </tbody>
</table>


<script>
    $(document).ready(function () {
        $('#userList').DataTable({

            responsive: true,
            lengthChange: false,
            "lengthMenu": [50, 100, 500, 1000, 2000, 5000, 10000, 50000, 100000],
            "order": [],
            "sScrollX": "100%",
            "scrollCollapse": true,
            dom: 'lBfrtip',
            buttons: [
                {
                    extend: 'print',

                    customize: function (win) {
                        $(win.document.body)
                            .css({ 'font-size': '10pt' })
                            .prepend(
                                '<img style= src="~/Images/activefinancelogo.png"  style="position:absolute; height:500px; z-index:5000; width:500px; top:0; left:0;" />'
                            );

                        $(win.document.body).find('table')
                            .addClass('compact')
                            .css('font-size', 'inherit');
                    }
                }, 'excelHtml5', {
                    extend: 'pdf',
                    download: 'open',
                }
            ]

        });
    });

</script>

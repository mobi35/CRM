@model IEnumerable<ActiveFinance1.ViewModel.LoanViewModel>

@{
    Layout = "_Staff";
    ViewData["Title"] = "Loan List";
}

<table class="table table-striped table-bordered responsive no-wrap" style="margin-top:5%;" id="userList">
    <thead>
        <tr>
            <th>Record ID</th>
            <th>Amount of Loan</th>
            <th>Loan Month</th>
            <th>Type Of Loan</th>
            <th>Remaining Month</th>
            <th>Branch</th>
            <th>Purpose of Loan</th>
            <th>Action</th>
        </tr>
    </thead>

    <tbody>
        @{
            foreach (var loanVM in Model)
            {
                <tr>
                    <td>@loanVM.LoanRecord.RecordId</td>
                    <td>@loanVM.LoanRecord.AmountOfLoan</td>
                    <td>@loanVM.LoanRecord.LoanMonth</td>
                    <td>@loanVM.LoanRecord.TypeOfLoan</td>
                    <td>@loanVM.LoanRecord.RemainingMonth</td>
                    <td>@loanVM.LoanRecord.Branch</td>
                    <td>@loanVM.LoanRecord.PurposeOfLoan</td>
                    <td><a href="#"><span style="font-size:30px;color:#007bff" class="fa fa-edit"></span></a> 
                    <a style="color:#d33333; font-size:30px" onclick="return confirm('Are you sure you want to do this ?')" href="#">
                        <span class="fa fa-trash"></span></a></td>
                </tr>
            }
        }
    </tbody>
</table>



<script>
$(document).ready(function() {
    $('#userList').DataTable( {

       responsive: true,
         lengthChange: false,
     "lengthMenu": [50,100,500,1000,2000,5000,10000,50000,100000],
         "order":[],
         "sScrollX": "100%",
         "scrollCollapse": true,
    dom: 'lBfrtip',
   buttons: [
            {
                 extend: 'print',

                customize: function ( win ) {
                    $(win.document.body)
                        .css( {  'font-size': '10pt' } )
                        .prepend(
                            '<img style= src="~/Images/activefinancelogo.png"  style="position:absolute; height:500px; z-index:5000; width:500px; top:0; left:0;" />'
                        );

                    $(win.document.body).find( 'table' )
                        .addClass( 'compact' )
                        .css( 'font-size', 'inherit' );
                }
            },'excelHtml5',{
                 extend: 'pdf',
                download: 'open',
            }
        ]

    } );
} );

</script>
